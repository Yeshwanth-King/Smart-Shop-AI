{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,  // Changed to false for production build
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // Changed to node for production build
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",  // Changed to react-jsx for Next.js
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
